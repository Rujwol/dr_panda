<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorLightGreen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/pet_lin_layout"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pet_image"
        android:layout_gravity="right"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/profile_init_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height"
        android:text="@string/profile_init_text" />

    <TextView
        android:id="@+id/pet_name_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height"
        android:text="@string/fa_placeholder" />

    <TextView
        android:id="@+id/pet_breed_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height"
        android:text="@string/fa_placeholder"/>

    <TextView
        android:id="@+id/pet_check_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height"
        android:layout_marginTop="@dimen/field_height"
        android:text="@string/pet_check_field"/>



    <EditText
        android:id="@+id/et_petdate_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/petdate_value_field" />

    <EditText
        android:id="@+id/et_petdate_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/petdate_type_field" />

    <Button
        android:id="@+id/but_petdate_add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/petdate_add_but" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/field_height"
            android:layout_marginLeft="@dimen/sidemargin_small"
            android:layout_marginRight="@dimen/sidemargin_small"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/but_notification_goto"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_petbutton"
                android:layout_weight="1"
                android:drawableTop="@drawable/icons8_schedule_48_green"

                android:text="@string/notification_goto_but" />

            <Button
                android:id="@+id/but_petcheck_graph"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_petbutton"
                android:layout_weight="1"

                android:drawableTop="@drawable/icons8_combo_chart_48_green"
                android:text="@string/petdate_view_check_but" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/field_height"
            android:layout_marginLeft="@dimen/sidemargin_small"
            android:layout_marginRight="@dimen/sidemargin_small"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/but_medication"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_petbutton"
                android:layout_weight="1"
                android:drawableTop="@drawable/icons8_pill_24_green"
                android:text="@string/medication_but" />

            <Button
                android:id="@+id/but_allergies"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_petbutton"
                android:layout_weight="1"
                android:drawableTop="@drawable/icons8_sneeze_24_green"
                android:text="@string/allergies_but" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>